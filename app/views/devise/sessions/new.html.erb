<% provide(:page_title, 'Sign in') %>
<% provide(:signin, 'active') %>

<div class="row">
    <div class="col-md-4 offset-md-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <% if !devise_error_messages!.blank? %>
          <div class="alert alert-info">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
            <%= devise_error_messages! %> 
          </div>
        <% end %>
        
        <div class="form-login">
          <h4>Sign in</h4>
          <%= f.email_field :email, autofocus: true, class: "form-control input-sm chat-input", placeholder: "email" %>
          </br>
          <%= f.password_field :password, autocomplete: "off", class: "form-control input-sm chat-input", placeholder: "password" %>
          </br>
          <div class="wrapper">
            <span class="group-btn"> 
                <%= f.submit "login", class: "btn btn-primary btn-md" %>
            </span>
          </div>
          <hr>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
</div>