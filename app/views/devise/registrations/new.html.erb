<% provide(:page_title, 'Register') %>
<% provide(:register, 'active') %>

<div class="row">
  <div class="col-md-4 offset-md-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <% if !devise_error_messages!.blank? %>
        <div class="alert alert-info">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
          <%= devise_error_messages! %> 
        </div>
      <% end %>
          
      <div class="form-login">
        <h4>Register</h4>
        <%= f.text_field :name, autofocus: true, class: "form-control input-sm chat-input", placeholder: "full name" %>
        </br>
        <%= f.email_field :email, class: "form-control input-sm chat-input", placeholder: "email" %>
        </br>
        <%= f.password_field :password, autocomplete: "off", class:"form-control input-sm chat-input", placeholder: "6 characters minimum" %>
        </br>
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control input-sm chat-input", placeholder: "confirm password" %>
        </br>
        <div class="wrapper">
          <span class="group-btn"> 
            <%= f.submit "register", class: "btn btn-primary btn-md" %>
          </span>
        </div>
        <hr>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>





